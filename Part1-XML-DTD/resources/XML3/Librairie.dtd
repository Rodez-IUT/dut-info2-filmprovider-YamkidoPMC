<!ENTITY % identite "(prenom?,nom)">
<!ENTITY % texte "(img*,em*,strong*,#PCDATA)+">
<!ENTITY copyright "Â©Librairie & Internet 2020">

<!ELEMENT img EMPTY>
<!ATTLIST img src CDATA #REQUIRED>
<!ATTLIST image title CDATA #IMPLIED>

<!ELEMENT em (#PCDATA)>
<!ELEMENT strong (#PCDATA)>
<!ELEMENT text (%texte;)>
<!ELEMENT entete (text)>

<!ELEMENT titre (#PCDATA)>
<!ELEMENT prenom (#PCDATA)>
<!ELEMENT nom (#PCDATA)>
<!ELEMENT auteur (%identite;)>
<!ELEMENT direction (%identite;)>
<!ELEMENT membres (#PCDATA)>

<!ELEMENT auteurs (auteur+|(direction,membres))>
<!ELEMENT description (%texte;)>

<!ELEMENT prix (#PCDATA)>
<!ATTLIST prix tva #FIXED "5.5" #REQUIRED>
<!ATTLIST prix devise (euro|dollar|livre) "euro" #REQUIRED>
<!ATTLIST prix type (HT|TTC) "HT" #REQUIRED>

<!ATTLIST livre numeroIsbn ID #REQUIRED>
<!ELEMENT livre (titre,auteurs,description,prix)>

<!ELEMENT site (entete,livre+)>

